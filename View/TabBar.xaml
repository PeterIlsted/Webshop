<UserControl x:Class="Webshop.View.TabBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Webshop.View"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid Height="50" Background="SpringGreen">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Name="CustomerViewBtn" Content="Customer" Height="25" Width="75" Margin="10,0"/>
            <Button Name="BasketBtn" Content="Basket" Height="25" Width="75" Margin="10,0"/>
            <Button Name="ItemsBtn" Content="Catalogue" Height="25" Width="75" Margin="10,0,10,0"/>
        </StackPanel>
    </Grid>
</UserControl>
